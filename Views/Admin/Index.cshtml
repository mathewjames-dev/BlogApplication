@using Microsoft.AspNetCore.Identity

<!-- Setting the model to a user populated list-->
@model BlogApplication.Models.AdminIndexViewModel
<!-- Setting the view file settings -->
@{
    ViewData["Title"] = "Admin Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Main container -->
<div class="text-center container">
    <h1>Admin Home</h1>

    <!-- Administrator Action Buttons -->
    <div class="row">
        <div class="col-md-3">
            <a href="/blog/create" class="btn btn-info">Create Blog</a>
        </div>

        <div class="col-md-3">
            <a href="/blog" class="btn btn-info">All Blogs</a>
        </div>
    </div>

    <p>All Registered Users</p>
    <table>
        <thead>
            <tr>
                <th>User Name</th>
                <th>Users Email</th>
                <th>Users Email Confirmed</th>
                <th>Edit User</th>
            </tr>
        </thead>

        <tbody>
            <!-- Looping through the model and setting it to user which is an instance of IdentityUser.-->
            @foreach (IdentityUser user in @Model.Users)
            {
                <tr>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td>@user.EmailConfirmed</td>
                    <td><a class="btn btn-info" href="/admin/user/edit/@user.Id">Edit User</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>