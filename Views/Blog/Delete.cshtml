<!-- Setup the page model -->
@model BlogApplication.Models.BlogDeleteViewModel

<!-- Setting up the page data -->
@{
    ViewData["Title"] = "Delete Blog";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete Blog</h1>
<h3>Are you sure you want to delete this?</h3>
<hr />

<div class="container">
    <!-- Utilising the model to display the title of the blog back to the user. -->
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Post.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Post.Title)
        </dd>
    </dl>

    <!-- Form utilising hidden input and setting it to the post id. 
        This makes it easier for retrieving the post in the controller -->
    @using (Html.BeginForm("Delete", "Blog", FormMethod.Post))
    {
        @Html.HiddenFor(m => m.Post.Id)
        <input class="btn btn-danger" type="submit" value="Delete Blog" />
        <a href="/blog">Back to List</a>
    }
</div>